<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center" id="top-bar">
      <h1>EAT ALL THE BURGERS!</h1>
    </div>
    <div class="col-xs-6 text-center" class="task">
      <div class="row">
        {{#each burger_data}}
          {{#unless this.devoured}}
        <div class="col-xs-9 text-center">
          <pre>{{this.id}}. {{this.burger_name}}</pre>
        </div>
      <div class="col-xs-3 text-center">
        <form method="POST" action="/burgers/updateSetWhere?_method=PUT" class="button-size">
          <input type="hidden" name="burger_id" type="text" value={{this.id}}>
          <br>
          <button type="submit" class="btn btn-default">DEVOUR THE BURGER!</button>
        </form>
      </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-xs-6 text-center devoured_burger_class" class="task">
      <p>Burgers that have already been devoured!</p>
      {{#each burger_data}}
        {{#if this.devoured}}
          <input class="form-control placeholder_boxes " type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center enter_section">
    <p>Enter the name of a burger that you would like to eat!</p>
    <form action="/burgers/insertIntoValues" method="POST">
      <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
      <button type="submit" class="btn btn-primary" id="text-enter-button">ADD NEW BURGER!</button>
    </form>
    <!-- <p>Enter the name of a burger that you would like to eat!</p> -->
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center" id="burger_img">
      <img src="assets/img/burger.jpg">
    </div>
  </div>
</div>
